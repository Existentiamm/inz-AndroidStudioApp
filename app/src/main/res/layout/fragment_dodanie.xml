<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/imie_panel_kota"
                style="@style/TextViewDodanieFragment"
                android:text="@string/imie_panel_kota" />

            <AutoCompleteTextView
                android:id="@+id/imie_edit_text"
                style="@style/AddingAnimalAutoCompleteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:ems="10"
                android:hint="imię zwierzaka"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/wiek_panel_kota"
                style="@style/TextViewDodanieFragment"
                android:text="@string/wiek_panel_kota" />

            <AutoCompleteTextView
                android:id="@+id/wiek_edit_text"
                style="@style/AddingAnimalAutoCompleteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="rok urodzenia zwierzaka" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/data_panel_kota"
                    style="@style/TextViewDodanieFragment"
                    android:layout_width="169dp"
                    android:layout_marginRight="5dp"
                    android:text="Zapisanie ważnej daty" />

                <Button
                    android:id="@+id/pokaz_kalendarz"
                    style="@style/TextViewDodanieFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/pokaz_Kalendarz"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/white"></Button>
            </LinearLayout>


            <AutoCompleteTextView
                android:id="@+id/data_edit_text"
                style="@style/AddingAnimalAutoCompleteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="ważna data do zapisania" />

            <TextView
                android:id="@+id/choroby_panel_kota"
                style="@style/TextViewDodanieFragment"
                android:text="@string/choroby_panel_kota" />

            <AutoCompleteTextView
                android:id="@+id/choroby_edit_text"
                style="@style/AddingAnimalAutoCompleteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="choroba zwierzaka" />

            <TextView
                android:id="@+id/leki_panel_kota"
                style="@style/TextViewDodanieFragment"
                android:text="@string/leki_panel_kota" />

            <AutoCompleteTextView
                android:id="@+id/leki_edit_text"
                style="@style/AddingAnimalAutoCompleteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="leki zwierzaka" />

            <TextView
                android:id="@+id/zabiegi_panel_kota"
                style="@style/TextViewDodanieFragment"
                android:text="@string/zabiegi_panel_kota" />

            <AutoCompleteTextView
                android:id="@+id/zabiegi_edit_text"
                style="@style/AddingAnimalAutoCompleteTextView"
                android:layout_width="300dp"

                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="zabiegi zwierzaka" />

            <Button
                android:id="@+id/zapisz_dane"
                style="@style/ButtonySterujace"
                android:layout_gravity="center_horizontal"
                android:text="@string/zapisz"
                />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
