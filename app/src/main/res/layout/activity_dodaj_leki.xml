<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/leki_title"
                style="@style/TextViewTiitleFragments"
                android:text="@string/leki_title" />

            <AutoCompleteTextView
                android:id="@+id/dodaj_leki_edit_text"
                style="@style/TextViewFragments"
                android:hint="Lek" />

            <EditText
                android:id="@+id/dodaj_leki_dodatkowe_informacje_edit_text"
                style="@style/TextViewFragments"
                android:hint="dodatkowe_informacje" />

            <Button
                android:id="@+id/zapisz_dane_leki"
                style="@style/ButtonySterujace"
                android:text="@string/zapisz" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>