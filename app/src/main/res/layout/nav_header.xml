<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/background_nav"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <!-- width: match parent, bo chcemy mieć w poziomie rozszerzone na maksa-->
    <!-- gravity: botton, bo menu ma się znaleźć pod nav_header -->
    <!-- nie chcemy margin, bo "odetnie to nasze nav_header od całości-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@string/imie_zwierzaka_navigation_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/imie_zwierzaka_navigation_bar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</androidx.appcompat.widget.LinearLayoutCompat>