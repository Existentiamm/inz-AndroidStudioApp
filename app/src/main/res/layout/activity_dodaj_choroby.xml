<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <TextView
                android:id="@+id/choroby_title"
                style="@style/TextViewTiitleFragments"
                android:text="@string/choroby_title" />

            <AutoCompleteTextView
                android:id="@+id/dodaj_choroby_imie_kota_edit_text"
                style="@style/TextViewFragments"
                android:inputType="textPersonName"
                android:completionThreshold="1"
                android:completionHint="Wybierz kota"
                android:hint="imie_kota"/>

            <AutoCompleteTextView
                android:id="@+id/dodaj_choroby_edit_text"
                style="@style/TextViewFragments"
                android:inputType="textPersonName"
                android:completionThreshold="1"
                android:completionHint="Wybierz chorobÄ™"
                android:hint="Choroba"/>

            <EditText
                android:id="@+id/dodaj_choroby_dodatkowe_informacje_edit_text"
                style="@style/TextViewFragments"
                android:hint="dodatkowe_informacje"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/zapisz_dane_choroby"
                style="@style/ButtonySterujace"
                android:text="@string/zapisz"
                />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>